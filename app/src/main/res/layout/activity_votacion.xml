<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Votacion">

    <TextView
        android:id="@+id/textView"
        android:layout_width="304dp"
        android:layout_height="59dp"
        android:text="@string/votaci_n_de_nuevo_rector_de_la_universidad"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_candidatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/candidatos_a_rector"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnvotar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="328dp"
        android:layout_height="371dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/rbCandidato1"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:drawableStart="@drawable/custom_btn_radio_cand3"
            android:text="@string/viv_an_valenzuela" />

        <RadioButton
            android:id="@+id/rbCandidato2"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:drawableStart="@drawable/custom_btn_radio_cand2"
            android:text="@string/omar_aizpurua" />

        <RadioButton
            android:id="@+id/rbCandidato3"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:drawableStart="@drawable/custom_btn_radio_cand1"
            android:text="@string/mart_n_candanedo" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>